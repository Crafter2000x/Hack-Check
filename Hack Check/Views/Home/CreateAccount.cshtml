@{
    ViewData["Title"] = "Create a account for Hack Check";
}

@model CreateAccountViewModel

<div class="container-fluid">
    <div class="row">
        <div class="col" style="text-align:left">
            Left colum
        </div>
        <div class="col userbox" style="text-align:center">
            <form asp-action="CreateAccount" asp-controller="Home">
                <div>
                    <h1>Hack Check</h1>
                    <h2>Create a account</h2>
                </div>

                <br />

                <div class="form-group">
                    <input asp-for="Username" class="form-control" placeholder="Enter a username">
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input asp-for="Email" class="form-control" placeholder="Enter a email address">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input asp-for="Password" class="form-control" placeholder="Enter a password">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm your password">
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="submit" value="Create your account" class="btn-success" />
                </div>

                <div class="form-group">
                    <a asp-action="Login">Already have a account?</a> <br />
                </div>
            </form>

        </div>
        <div class="col" style="text-align:right">
            Right colum
        </div>
    </div>
</div>


