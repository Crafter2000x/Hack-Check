@{
    ViewData["Title"] = "Login to Hack Check";
}

@model LoginViewModel

<div class="container-fluid">
    <div class="row">
        <div class="col-sm col-md-3 col-lg-3 col-xl-4 text-center">
            Left colum
        </div>
        <div class="col-md-6  col-lg-6 col-xl-4 userbox text-center">
            <form asp-action="Login" asp-controller="Home">
                <div>
                    <h1 class="text-uppercase">Hack Check</h1>
                    <h2 class="text-uppercase">Login</h2>
                </div>

                <br />

                <div class="form-group">
                    <input asp-for="Username" class="form-control" placeholder="Username">
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input asp-for="Password" class="form-control" placeholder="Password">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="submit" value="Login" class="btn-success" />
                </div>

                <div class="form-group">
                    <a asp-action="CreateAccount">Forgot password?</a> <a asp-action="CreateAccount" asp-controller="Home">Don't have a account?</a> <br />
                </div>
            </form>
        </div>
        <div class="col-sm col-md-3 col-lg-3 col-lx-4 text-center">
            Right colum
        </div>
    </div>
</div>