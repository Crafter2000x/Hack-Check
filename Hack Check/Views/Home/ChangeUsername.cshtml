@{
    ViewData["Title"] = "Change username";
}

@model HackCheck.Business.AccountViewModel

<div class="container-fluid">
    <div class="row">
        <div class="col" style="text-align:left">
            Left colum
        </div>
        <div class="col userbox" style="text-align:center">
            <div>
                <h1>Hack Check</h1>
                <h2>Change Username</h2>
            </div>

            <br />

            <div class="form-group">
                <div asp-validation-summary="ModelOnly" class="text-success"></div>
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>

            <form asp-action="ChangeUsername" asp-controller="Home">

                <div class="form-group">
                    <span class="text-info">Password</span>
                    <input asp-for="OldPassword" class="form-control">
                    <span asp-validation-for="OldPassword" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <span class="text-info">New username</span>
                    <input asp-for="NewUsername" class="form-control">
                    <span asp-validation-for="NewUsername" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Update username" class="btn-success" />
                </div>

            </form>

            <div class="form-group">

            </div>
        </div>
        <div class="col" style="text-align:right">
            Right colum
        </div>
    </div>
</div>
